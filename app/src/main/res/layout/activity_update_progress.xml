<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F7FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Progress"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"/>

        <!-- Project Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_project_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/tv_project_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Project Info"
                android:textSize="16sp"
                android:textColor="#424242" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_progress_inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_project_info"
            android:layout_marginTop="16dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Progress Label -->
                <TextView
                    android:id="@+id/tv_progress_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Progress Value -->
                <TextView
                    android:id="@+id/tv_progress_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    app:layout_constraintTop_toTopOf="@id/tv_progress_label"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Slider -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:stepSize="1"
                    app:thumbColor="#1E88E5"
                    app:trackColorActive="#1E88E5"
                    app:trackColorInactive="#E0E0E0"
                    app:layout_constraintTop_toBottomOf="@id/tv_progress_label"
                    android:layout_marginTop="8dp"/>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_progress_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Progress Notes"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxStrokeColor="#1E88E5"
                    app:hintTextColor="#1E88E5"
                    app:layout_constraintTop_toBottomOf="@id/slider_progress"
                    android:layout_marginTop="16dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_progress_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="5"
                        android:textColor="#212121"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Image Upload Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_image_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_progress_inputs"
            android:layout_marginTop="16dp"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Image Preview -->
                <ImageView
                    android:id="@+id/iv_image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_placeholder"
                    android:contentDescription="Image Preview"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="gone"/>

                <!-- Upload Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Image"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#1E88E5"
                    app:cornerRadius="8dp"
                    app:rippleColor="#42A5F5"
                    app:icon="@drawable/ic_upload"
                    app:iconGravity="start"
                    app:layout_constraintTop_toBottomOf="@id/iv_image_preview"
                    android:layout_marginTop="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="Save Progress"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1565C0"
            app:cornerRadius="8dp"
            app:rippleColor="#1976D2"
            app:layout_constraintTop_toBottomOf="@id/card_image_upload"
            style="@style/Widget.MaterialComponents.Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>